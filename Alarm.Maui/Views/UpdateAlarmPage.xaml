<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alarm.Maui.Views.UpdateAlarmPage"
             Title="Edit Alarm">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Set Alarm Time" FontAttributes="Bold" />
            <TimePicker Time="{Binding Time}" />

            <Label Text="Select Days of Week" FontAttributes="Bold" />
            <VerticalStackLayout>
                <HorizontalStackLayout>
                    <CheckBox IsChecked="{Binding Monday}" />
                    <Label Text="Monday" />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <CheckBox IsChecked="{Binding Tuesday}" />
                    <Label Text="Tuesday" />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <CheckBox IsChecked="{Binding Wednesday}" />
                    <Label Text="Wednesday" />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <CheckBox IsChecked="{Binding Thursday}" />
                    <Label Text="Thursday" />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <CheckBox IsChecked="{Binding Friday}" />
                    <Label Text="Friday" />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <CheckBox IsChecked="{Binding Saturday}" />
                    <Label Text="Saturday" />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <CheckBox IsChecked="{Binding Sunday}" />
                    <Label Text="Sunday" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <Label Text="Select Alarm Mode" FontAttributes="Bold" />
            <Picker ItemsSource="{Binding Modes}" 
                    SelectedItem="{Binding SelectedMode}"
                    ItemDisplayBinding="{Binding Name}" />

            <Label Text="Alarm Status" FontAttributes="Bold" />
            <Switch IsToggled="{Binding Status}" 
                    OnColor="#2196F3"
                    HorizontalOptions="Start"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Text="Update Alarm"
                        Command="{Binding UpdateCommand}"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        Grid.Column="0"/>

                <Button Text="Delete Alarm"
                        Command="{Binding DeleteCommand}"
                        BackgroundColor="#FF5252"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        Grid.Column="1"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>