<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alarm.Maui.Views.MainPage"
             Title="Your Alarms">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Заголовок -->
        <Label Text="Your Alarms"
               FontSize="32"
               HorizontalOptions="Center"
               SemanticProperties.HeadingLevel="Level1" />

        <!-- Grid с будильниками -->
        <Grid RowSpacing="10" ColumnSpacing="10">

            <!-- Определяем колонки: Время | Режим | Вкл/Выкл -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Определяем строки: 1 заголовок + 3 будильника -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок -->
                <RowDefinition Height="Auto"/>
                <!-- Первый будильник -->
                <RowDefinition Height="Auto"/>
                <!-- Второй будильник -->
                <RowDefinition Height="Auto"/>
                <!-- Третий будильник -->
            </Grid.RowDefinitions>

            <!-- Заголовки -->
            <Label Text="Time" FontAttributes="Bold" Grid.Row="0" Grid.Column="0" />
            <Label Text="Mode" FontAttributes="Bold" Grid.Row="0" Grid.Column="1" />
            <Label Text="Enabled" FontAttributes="Bold" Grid.Row="0" Grid.Column="2" />

            <!-- Первый будильник -->
            <Label Text="07:30" Grid.Row="1" Grid.Column="0" />
            <Label Text="First" Grid.Row="1" Grid.Column="1" />
            <Switch IsToggled="True" Grid.Row="1" Grid.Column="2" />

            <!-- Второй будильник -->
            <Label Text="08:00" Grid.Row="2" Grid.Column="0" />
            <Label Text="Second" Grid.Row="2" Grid.Column="1" />
            <Switch IsToggled="False" Grid.Row="2" Grid.Column="2" />

            <!-- Третий будильник -->
            <Label Text="09:15" Grid.Row="3" Grid.Column="0" />
            <Label Text="Third" Grid.Row="3" Grid.Column="1" />
            <Switch IsToggled="True" Grid.Row="3" Grid.Column="2" />

        </Grid>
        <!-- Кнопка -->
        <Button Text="Add Alarm"
                HorizontalOptions="Fill"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"/>

    </VerticalStackLayout>

</ContentPage>
