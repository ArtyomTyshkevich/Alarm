<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alarm.Maui.Views.MainPage">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Заголовок страницы -->
        <Label Text="Your Alarms"
               FontSize="32"
               HorizontalOptions="Center"
               SemanticProperties.HeadingLevel="Level1" />

        <!-- Список будильников -->
        <CollectionView x:Name="AlarmsList"
                        ItemsSource="{Binding Alarms}"
                        SelectionMode="None"
                        HeightRequest="400">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="10" Padding="10" Margin="0,5"
                           BorderColor="LightGray"
                           BackgroundColor="White">
                        <HorizontalStackLayout Spacing="20" VerticalOptions="Center">
                            <Label Text="{Binding Time}" FontSize="24" VerticalOptions="Center" />
                            <Label Text="{Binding Label}" FontSize="16" VerticalOptions="Center" TextColor="Gray" />
                            <Switch IsToggled="{Binding Enabled}" HorizontalOptions="EndAndExpand"/>
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Кнопка для добавления нового будильника -->
        <Button Text="Add Alarm"
                Clicked="OnAddAlarmClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"/>

    </VerticalStackLayout>

</ContentPage>
