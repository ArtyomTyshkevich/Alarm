<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Alarm.Maui.ViewModels"
             x:Class="Alarm.Maui.Views.MainPage"
             Title="Your Alarms">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="Your Alarms"
               FontSize="32"
               HorizontalOptions="Center"
               SemanticProperties.HeadingLevel="Level1" />

        <CollectionView ItemsSource="{Binding Alarms}">
            <CollectionView.Header>
                <Grid ColumnDefinitions="2*,2*,1*,3*">
                    <Label Text="Time" FontAttributes="Bold" />
                    <Label Text="Mode" FontAttributes="Bold" Grid.Column="1" />
                    <Label Text="Enabled" FontAttributes="Bold" Grid.Column="2" />
                    <Label Text="Days" FontAttributes="Bold" Grid.Column="3" />
                </Grid>
            </CollectionView.Header>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="2*,2*,1*,3*" Padding="5">
                        <!-- Добавляем TapGestureRecognizer для обработки нажатий -->
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainPageViewModel}}, Path=OpenAlarmCommand}"
                                CommandParameter="{Binding .}" />
                        </Grid.GestureRecognizers>

                        <!-- Время -->
                        <Label Text="{Binding Time}" Grid.Column="0" />

                        <!-- Режим -->
                        <Label Text="{Binding Mode.Name}" Grid.Column="1" />

                        <!-- Статус -->
                        <Switch IsToggled="{Binding Status, Converter={StaticResource AlarmStatusToBoolConverter}}" 
                                Grid.Column="2" />

                        <!-- Дни недели -->
                        <Label Text="{Binding DaysOfWeek, Converter={StaticResource DaysOfWeekToStringConverter}}" 
                               Grid.Column="3" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Add Alarm"
                Command="{Binding AddAlarmCommand}"
                HorizontalOptions="Fill"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"/>

    </VerticalStackLayout>
</ContentPage>